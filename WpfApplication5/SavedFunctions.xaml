<UserControl x:Class="VSG.SavedFunctionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSG"
             mc:Ignorable="d" d:DesignWidth="300" Height="25">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MaxWidth="250"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="FunctionNamex" Margin="0,2,5,2" Content="{Binding Path=FunctionName}" HorizontalAlignment="Left" MouseDown="FunctionNamex_MouseDown"></Label>
        <Button Grid.Column="1" Click="RemoveFunction" Margin="0,2,5,2">Delete</Button>
    </Grid>
</UserControl>
